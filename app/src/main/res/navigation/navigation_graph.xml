<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_graph"
    app:startDestination="@id/rulesFragment">

    <navigation android:id="@+id/navigation2"
        app:startDestination="@id/rulesFragment3">
        <fragment
            android:id="@+id/aboutFragment"
            android:name="com.zeko.triviaapp.ui.fragments.AboutFragment"
            android:label="fragment_about"
            tools:layout="@layout/fragment_about" />
        <fragment
            android:id="@+id/rulesFragment3"
            android:name="com.zeko.triviaapp.ui.fragments.RulesFragment"
            android:label="fragment_rules"
            tools:layout="@layout/fragment_rules" />
        <fragment
            android:id="@+id/gameFragment2"
            android:name="com.zeko.triviaapp.ui.fragments.GameFragment"
            android:label="fragment_game"
            tools:layout="@layout/fragment_game" >
            <action
                android:id="@+id/action_gameFragment2_to_gameOverFragment3"
                app:destination="@id/gameOverFragment3" />
            <action
                android:id="@+id/action_gameFragment2_to_gameWonFragment2"
                app:destination="@id/gameWonFragment2" />
        </fragment>
        <fragment
            android:id="@+id/gameOverFragment3"
            android:name="com.zeko.triviaapp.ui.fragments.GameOverFragment"
            android:label="fragment_game_over"
            tools:layout="@layout/fragment_game_over" />
        <fragment
            android:id="@+id/gameWonFragment2"
            android:name="com.zeko.triviaapp.ui.fragments.GameWonFragment"
            android:label="fragment_game_won"
            tools:layout="@layout/fragment_game_won" />
        <fragment
            android:id="@+id/titleFragment3"
            android:name="com.zeko.triviaapp.ui.fragments.TitleFragment"
            android:label="fragment_title"
            tools:layout="@layout/fragment_title" >
            <action
                android:id="@+id/action_titleFragment3_to_gameFragment2"
                app:destination="@id/gameFragment2" />
        </fragment>
    </navigation>
</navigation>